<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="新增題目圖片"
                    android:gravity="center"
                    android:scrollbars = "vertical"
                    android:singleLine="false" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/black"
                    />

                <LinearLayout
                    android:id="@+id/question_image_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/answer_choose_image"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:clickable="true"
                        android:background="@drawable/add_image"
                        android:text="新增圖片 ( 上限三張 ) 📂" />
                    <ImageView
                        android:id="@+id/iv_answer_image0"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:contentDescription="image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_image_border"/>
                    <ImageView
                        android:id="@+id/iv_answer_image1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:contentDescription="image"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_image_border"/>
                    <ImageView
                        android:id="@+id/iv_answer_image2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        android:contentDescription="image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_image_border"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/answer_image_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:clickable="true"
                            android:background="@drawable/add_image"
                            android:text="取消新增 ❌" />
                        <TextView
                            android:id="@+id/answer_image_enter"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:clickable="true"
                            android:background="@drawable/add_image"
                            android:text="上傳圖片 ✅" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>